{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "img/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/send-campaign", "dest": "index.js" },
    { "src": "/bookings", "dest": "index.js" },
    { "src": "/webhook", "dest": "index.js" },
    { "src": "/(.*\\.html)", "dest": "/$1" },
    { "src": "/(.*\\.css)", "dest": "/$1" },
    { "src": "/img/(.*)", "dest": "/img/$1" }
  ]
}
